<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/crimson</item>
        <item name="colorPrimaryDark">@color/crimson</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--要api 19 以上-->
       <!-- <item name="android:navigationBarColor">@color/crimson</item>-->
    </style>


    <!--全屏样式-->
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
