<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.zsh.learn.mymusic">

    <uses-permission android:name="android.permission.INTERNET" />;

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>;


    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        <activity android:name=".lead.LeadActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".home.MainActivity"></activity>
        <activity android:name=".play.PlayActivity"></activity>
        <activity android:name=".loading.LoadingActivity"></activity>
        <service android:name=".play.MusicService"></service>
    </application>

</manifest>